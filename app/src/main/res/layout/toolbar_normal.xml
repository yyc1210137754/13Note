<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/qmui_config_color_white"
    app:contentInsetEnd="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetStart="0dp"
    app:elevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <cn.dujc.core.ui.StatusBarPlaceholder
            android:id="@id/core_toolbar_status_bar_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/b88">

            <ImageView
                android:id="@id/core_toolbar_back_id"
                android:layout_width="@dimen/b88"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:padding="@dimen/b20"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_back" />

            <TextView
                android:id="@id/core_toolbar_title_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="10"
                android:maxLines="1"
                android:textSize="@dimen/b34"
                tools:text="标题标题标题标题标题" />

            <FrameLayout
                android:id="@id/core_toolbar_menu_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/b88"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/b20"
                    android:scaleType="fitCenter"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxEms="6"
                    android:maxLines="1"
                    android:padding="@dimen/b20"
                    android:textSize="@dimen/b26"
                    tools:text="标题标题标题标题标题" />
            </FrameLayout>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/b1"
            android:background="@color/color_gray_e8" />
    </LinearLayout>
</androidx.appcompat.widget.Toolbar>